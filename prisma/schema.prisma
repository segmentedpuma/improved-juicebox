generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model users {
  id Int @id @default(autoincrement())
  username String @unique
  password String
  posts posts[]
}


model posts {
  id Int @id @default(autoincrement())
  title String
  content String
  creator users @relation(fields: [creatorId], references: [id])
  creatorId Int
}

